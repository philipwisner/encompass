<div class="flex-container wrapper">
  <div class="flex-item filter-options">
    {{problem-filter store=store onUpdate=(action "triggerFetch") filter=filter primaryFilter=primaryFilter}}
  </div>

  <div class="flex-item list-view">
    {{#link-to 'problems.new' id="problem-new-link" class="new-link-btn"}}<i class="fas fa-plus"></i>{{/link-to}}
    {{search-bar
      onSearch=(action "searchProblems")
      showFilter=true
      searchOptions = searchOptions
      basePlaceholder="Search problems"
      inputValue=searchInputValue
      }}


    <div class="results-info">
        {{#if criteriaTooExclusive}}
          <p>No results found. Please try expanding your filter criteria.</p>
        {{else if areNoRecommendedProblems}}
          <p>There are currently no recommended problems for {{currentUserOrgName}}.</p>
        {{else if isDisplayingSearchResults}}
          <p>Based off your filter criteria, we found {{problemsMetadata.total}} problems whose {{searchCriterion}} contains "{{searchQuery}}"</p>
          <button {{action "clearSearchResults"}}>Clear Results</button>
        {{else}}
          <p>We found {{problemsMetadata.total}} problems based off of your current filter criteria</p>
        {{/if}}
    </div>


    {{problem-list isSearching=isSearchingProblems problems=displayProblems metadata=problemsMetadata}}

      {{pagination-control
        details=problemsMetadata
        initiatePageChange=(action "initiatePageChange")
      }}


  </div>
</div>


<div class="filter-items">
  <h2>Filter Options</h2>
  <h3>Primary Filters</h3>
  <ul>
    {{#each primaryFilterOptions as |input|}}
      <li>
        {{radio-filter groupValue=primaryFilterValue secondaryInputs=input.secondaryFilters isChecked=input.isChecked groupName="top-level" inputValue=input.value onClick=(action "updateTopLevel") labelName=input.label}}
        {{#if (is-equal primaryFilterValue input.value)}}
          {{#if showAdminFilters}}
            {{selectize-input
              store=store
              inputId="creator-filter"
              valueField="id"
              labelField="username"
              searchField="username"
              onItemAdd=(action "addCreator")
              onItemRemove=(action "removeCreator")
              isAsync=true
              maxItems=3
              placeholder="Select up to 3 creators"
              model="user"
              queryParamsKey="usernameSearch"
            }}
          {{else}}
          <ul class="secondary-filter-options">
            {{#each secondaryFilterOptions as |option|}}
              <li>
                {{input id=option.value type="checkbox" checked=option.isApplied change=(action "updateSecondLevel")}}
                <label for={{option.value}}>{{option.label}}</label>
              </li>
            {{/each}}
          </ul>
          {{/if}}

        {{/if}}
      </li>
    {{/each}}
  </ul>

</div>




